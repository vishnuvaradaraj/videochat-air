<?xml version="1.0" encoding="utf-8"?>
<s:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" includeInLayout="false" width="100%">

	<fx:Script>
		<![CDATA[
			
			[Bindable]
			public var message:String;
			
		]]>
	</fx:Script>

	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:states>
		<s:State name="info"/>
		<s:State name="error"/>
	</s:states>
	
	<s:SkinnableContainer backgroundColor.info="green" backgroundColor.error="red" width="100%" >
		<s:Label text="{message}" width="100%" paddingTop="10" paddingBottom="5" paddingLeft="10" paddingRight="10" />
	</s:SkinnableContainer> 


</s:VGroup>
